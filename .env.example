# ========================================
# FocusFlow Environment Configuration
# ========================================
# Copy this file to .env and fill in your values

# ========================================
# MongoDB Configuration
# ========================================

# Local MongoDB (Development - Default)
MONGO_URI=mongodb://127.0.0.1:27017/focusflow

# OR MongoDB Atlas (Cloud - Production)
# MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/focusflow?retryWrites=true&w=majority

# OR MongoDB with Authentication (Local with credentials)
# MONGO_URI=mongodb://username:password@127.0.0.1:27017/focusflow

# ========================================
# JWT Configuration
# ========================================

# Secret key for signing JWT tokens (use long random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_key_change_in_production

# ========================================
# Server Configuration
# ========================================

# Port for Express server
PORT=5000

# ========================================
# Notes for MongoDB Compass Users
# ========================================

# To connect with MongoDB Compass:
# 1. Open MongoDB Compass
# 2. Click "New Connection"
# 3. Paste the MONGO_URI value
# 4. Click "Connect"
# 5. Navigate to 'focusflow' database
#
# Default Connection URI for Compass:
# mongodb://localhost:27017
#
# Collections created automatically:
# - users (user accounts)
# - analytics (study tracking)
# - playgrounds (code saves)

